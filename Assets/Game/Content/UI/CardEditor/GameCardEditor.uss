.custom-label {
    font-size: 20px;
    -unity-font-style: bold;
    color: rgb(68, 138, 255);
}

.toolbar-toggle {
    background-color: #333;
    color: white;
    padding: 6px 12px;
    border-radius: 4px;
}

.toolbar-toggle:checked {
    background-color: #005b46;
    color: white;
}

.icon-frame {
    width: 128px;
    height: 128px;
    border: 1px solid #555555;
    background-color: rgba(255, 255, 255, 0.05);
    margin-bottom: 4px;
}
